# Finstage Market Data - 환경변수 설정 예시
# 실제 사용 시 .env.development, .env.test, .env.production 파일로 복사하여 사용

# =============================================================================
# 애플리케이션 설정
# =============================================================================
ENVIRONMENT=development
DEBUG=true
VERSION=1.0.0
HOST=0.0.0.0
PORT=8000

# =============================================================================
# 데이터베이스 설정 (MySQL)
# =============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_secure_password_here
MYSQL_DATABASE=finstage_market_data

# =============================================================================
# API 키 설정
# =============================================================================
# OpenAI API 키 (필수)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Yahoo Finance API 요청 간격 (초)
YFINANCE_DELAY=0.5

# =============================================================================
# 텔레그램 봇 설정
# =============================================================================
# 텔레그램 봇 토큰 (BotFather에서 발급)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# 텔레그램 채팅 ID (개인 채팅: 숫자, 그룹 채팅: -로 시작)
TELEGRAM_CHAT_ID=-1234567890

# =============================================================================
# 로깅 설정
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/app.log
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_BACKUP_COUNT=10
LOG_CONSOLE_ENABLED=true

# =============================================================================
# 보안 설정
# =============================================================================
# 애플리케이션 시크릿 키 (32자 이상)
SECURITY_SECRET_KEY=your-very-secure-secret-key-at-least-32-characters-long

# 데이터 암호화 키 (선택사항, Fernet 키 44자)
# SECURITY_ENCRYPTION_KEY=your-44-character-fernet-encryption-key-here

# 허용된 호스트 (쉼표로 구분)
SECURITY_ALLOWED_HOSTS=*

# CORS 허용 오리진 (쉼표로 구분)
SECURITY_CORS_ORIGINS=*